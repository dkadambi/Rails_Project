<h1>All Products</h1>
<p><%= link_to 'New Product', new_product_path %></p>
<% @products.each do |product| %>
<section>
<h3><%= link_to product.name, product_path(product) %></h3>
<p><%= link_to 'edit', edit_product_path(product)%></p>
<p><%= link_to 'delete', delete_product_path(product), method: :delete, confirm: 'Are you sure you want to delete this product?' %></p>
</section>
<% end %>
